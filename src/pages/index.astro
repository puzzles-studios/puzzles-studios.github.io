  { src: '/assets/portfolio/linkedin/big/photo_17_2025-02-27_00-50-30.jpg' },
  { src: '/assets/portfolio/linkedin/small/photo_13_2025-02-27_00-50-30.jpg' },
  { src: '/assets/portfolio/linkedin/small/photo_14_2025-02-27_00-50-30.jpg' },
  { src: '/assets/portfolio/linkedin/small/photo_15_2025-02-27_00-50-30.jpg' },
  { src: '/assets/portfolio/linkedin/small/photo_16_2025-02-27_00-50-30.jpg' },
  { src: '/assets/portfolio/linkedin/small/photo_18_2025-02-27_00-50-30.jpg' },
