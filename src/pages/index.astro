---
import BaseLayout from '../layouts/BaseLayout.astro';
import PortfolioSection from '../components/PortfolioSection.astro';
import { listImages } from '../lib/galleryData';

// Sample images for each category - organized by folder structure with balanced layouts
const weddingImages = listImages('wedding');

const graduationImages = listImages('graduation');

const linkedinImages = listImages('linkedin');

const portraitImages = listImages('portrait');
---

<BaseLayout title="Puzzles Studios - Portfolio">
  <div class="container mx-auto">
    <div class="text-center mb-16">
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Capturing life's most precious moments through the art of photography
      </p>
    </div>
    
    <!-- Navigation for sections -->
    <nav class="mb-16">
      <div class="flex justify-center">
        <ul class="flex flex-wrap justify-center gap-6 md:gap-12 text-lg bg-white dark:bg-gray-800 rounded-full px-8 py-4 shadow-lg">
          <li>
            <a 
              href="#wedding" 
              class="hover:text-gray-600 dark:hover:text-gray-300 transition duration-300 font-medium"
            >
              Wedding
            </a>
          </li>
          <li>
            <a 
              href="#graduation" 
              class="hover:text-gray-600 dark:hover:text-gray-300 transition duration-300 font-medium"
            >
              Graduation
            </a>
          </li>
          <li>
            <a 
              href="#linkedin" 
              class="hover:text-gray-600 dark:hover:text-gray-300 transition duration-300 font-medium"
            >
              LinkedIn
            </a>
          </li>
          <li>
            <a 
              href="#portrait" 
              class="hover:text-gray-600 dark:hover:text-gray-300 transition duration-300 font-medium"
            >
              Portrait
            </a>
          </li>
        </ul>
      </div>
    </nav>

    <section class="space-y-24">
      <!-- Wedding Section -->
      <PortfolioSection title="Wedding" images={weddingImages} id="wedding" />
      
      <!-- Graduation Section -->
      <PortfolioSection title="Graduation" images={graduationImages} id="graduation" />
      
      <!-- LinkedIn Section -->
      <PortfolioSection title="LinkedIn" images={linkedinImages} id="linkedin" />
      
      <!-- Portrait Section -->
      <PortfolioSection title="Portrait" images={portraitImages} id="portrait" />
    </section>
  </div>
</BaseLayout>
