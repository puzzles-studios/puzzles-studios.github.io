---
import Gallery from './Gallery.astro';

export interface Props {
  title: string;
  images: Array<{
    src: string;
    alt?: string;
    size?: 'full' | 'half' | 'quarter';
  }>;
  id?: string;
}

const { title, images, id } = Astro.props;
const galleryId = id || title.toLowerCase().replace(/\s+/g, '-');
---

<section id={galleryId} class="mb-20">
  <div class="text-center mb-12">
    <h2 class="text-4xl font-bold mb-4 text-gray-900 dark:text-white">{title}</h2>
    <div class="w-24 h-1 bg-gradient-to-r from-gray-400 to-gray-600 dark:from-gray-500 dark:to-gray-300 mx-auto rounded-full"></div>
  </div>
  <div class="container w-full">
    <Gallery images={images} galleryName={galleryId} />
  </div>
</section>
